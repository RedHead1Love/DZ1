using System;
using System.Collections.Generic;
using System.Globalization;

class Program
{
    static void Main()
    {
        const string CommandCalculateSum = "sum";
        const string CommandExit = "exit";


        List<double> numbers = new List<double>();
        bool isRunning = true;

        Console.WriteLine($"Введите числа (по одному). Команды: {CommandCalculateSum} - сумма, {CommandExit} - выход");

        while (isRunning)
        {
            Console.Write(">>>>>> ");
            string input = Console.ReadLine()?.Trim().ToLower();

            switch (input)
            {
                case CommandCalculateSum:
                    if (numbers.Count == 0)
                    {
                        Console.WriteLine("Список чисел пуст");
                    }
                    else
                    {
                        double sum = 0;
                        foreach (var num in numbers) sum += num;
                        Console.WriteLine($"Сумма всех чисел: {sum}");
                    }
                    break;

                case CommandExit:
                    isRunning = false;
                    Console.WriteLine("Завершение работы программы...");
                    break;

                default:
                    try
                    {
                        double number = Convert.ToDouble(input, CultureInfo.CurrentCulture);
                        numbers.Add(number);
                        Console.WriteLine($"Добавлено число: {number}");
                    }
                    catch (FormatException)
                    {
                        Console.WriteLine("Ошибка: введите число или команду (sum/exit)");
                    }
                    catch (OverflowException)
                    {
                        Console.WriteLine("Ошибка: число слишком большое или маленькое");
                    }
                    break;
            }
        }
    }
}
