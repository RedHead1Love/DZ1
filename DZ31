using System;

class Program
{
    static void Main()
    {
        int[] numbers = new int[0];
        bool shouldContinue = true;

        const string CommandExit = "1";
        const string CommandSum = "2";

        while (shouldContinue)
        {
            Console.WriteLine("Текущие числа: " + string.Join(", ", numbers));
            Console.Write("Введите число или команду (sum/exit): ");

            string input = Console.ReadLine().ToLower();

            switch (input)
            {
                case CommandExit:
                    shouldContinue = false;
                    break;

                case CommandSum:
                    int sum = 0;

                    foreach (int num in numbers)
                    {
                        sum += num;
                    }
                    Console.WriteLine("Сумма введенных чисел: " + sum);
                    break;

                default:
                    if (int.TryParse(input, out int number))
                    {
                        int[] newArray = new int[numbers.Length + 1];
                        Array.Copy(numbers, newArray, numbers.Length);
                        newArray[numbers.Length] = number;
                        numbers = newArray;
                    }
                    else
                    {
                        Console.WriteLine($"Ошибка: введите число или команду {CommandSum}/{CommandExit}");
                    }
                    break;
            }
        }
    }
}
