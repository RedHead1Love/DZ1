using System;
using System.Collections.Generic;

namespace CardGame
{
    public class Card
    {
        public string Suit { get; } 
        public string Rank { get; }

        public Card(string suit, string rank)
        {
            Suit = suit;
            Rank = rank;
        }

        public override string ToString()
        {
            return $"{Rank} of {Suit}";
        }
    }

    public class Deck
    {
        private List<Card> cards;
        private static readonly string[] Suits = { "Черви", "Бубны", "Трефы", "Крести" };
        private static readonly string[] Ranks = { "2", "3", "4", "5", "6", "7", "8", "9", "10", "Валет", "Дама", "Король", "Туз" };

        public Deck()
        {
            cards = new List<Card>();
            InitializeDeck();
            Shuffle();
        }

        private void InitializeDeck()
        {
            foreach (var suit in Suits)
            {
                foreach (var rank in Ranks)
                {
                    cards.Add(new Card(suit, rank));
                }
            }
        }

        public void Shuffle()
        {
            Random random = new Random();

            for (int i = cards.Count - 1; i > 0; i--)
            {
                int j = random.Next(i + 1);
                Card temp = cards[i];
                cards[i] = cards[j];
                cards[j] = temp;
            }
        }

        public Card DrawCard()
        {
            if (cards.Count == 0)
            {
                throw new InvalidOperationException("Колода заполнена");
            }

            Card card = cards[0];
            cards.RemoveAt(0);
            return card;
        }

        public int CardsLeft => cards.Count;
    }

    public class Player
    {
        public List<Card> Hand { get; }

        public Player()
        {
            Hand = new List<Card>();
        }

        public void AddCard(Card card)
        {
            Hand.Add(card);
        }

        public void ShowHand()
        {
            Console.WriteLine("Карты игрока:");

            foreach (var card in Hand)
            {
                Console.WriteLine(card);
            }
        }
    }

    public class Dealer
    {
        private Deck deck;
        private Player player;

        public Dealer(Player player)
        {
            deck = new Deck();
            this.player = player;
        }

        public void DealCards(int numberOfCards)
        {
            if (numberOfCards <= 0)
            {
                Console.WriteLine("Количество карт должно быть положительным.");
                return;
            }

            if (numberOfCards > deck.CardsLeft)
            {
                Console.WriteLine($"Недостаточно карт в колоде. Осталось {deck.CardsLeft} карт в колоде");
                return;
            }

            for (int i = 0; i < numberOfCards; i++)
            {
                player.AddCard(deck.DrawCard());
            }
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Добро пожаловать в игру");

            Player player = new Player();
            Dealer dealer = new Dealer(player);

            Console.Write("Введите количество карт для раздачи: ");

            if (int.TryParse(Console.ReadLine(), out int numberOfCards))
            {
                dealer.DealCards(numberOfCards);
                player.ShowHand();
            }
            else
            {
                Console.WriteLine("неверный ввод, введите правильную команду");
            }

            Console.WriteLine("Нажмите любую кноку для выхода");
            Console.ReadKey();
        }
    }
}
