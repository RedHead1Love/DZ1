using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Программа запущена. Введите 'exit' для выхода.");

        string userInput;
        bool isRunning = true;
        string exitCommand = "exit";

        while (isRunning)
        {
            Console.Write(">>>>>> ");
            userInput = Console.ReadLine()?.Trim().ToLower();

            if (userInput == exitCommand)
            {
                isRunning = false;
            }
            else
            {
                Console.WriteLine($"Вы ввели: {userInput}");
            }
        }

        Console.WriteLine("Программа завершена.");
    }
}
