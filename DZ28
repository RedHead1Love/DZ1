using System;

class Program
{
    static void Main()
    {
        int matrixHeight = 10;
        int matrixWidth = 10;

        int smallestNumberInMatrix = 1;
        int largestNumberInMatrix = 1000;

        int numberFieldWidth = 4;

        int[,] matrix = new int[matrixHeight, matrixWidth];
        Random random = new Random();

        Console.WriteLine($"Исходная матрица ({matrixHeight},{matrixWidth}):");

        for (int i = 0; i < matrixHeight; i++)
        {
            for (int j = 0; j < matrixWidth; j++)
            {
                matrix[i, j] = random.Next(smallestNumberInMatrix, largestNumberInMatrix);
                Console.Write(string.Format("{0," + numberFieldWidth + "}", matrix[i, j]));
            }
            Console.WriteLine();
        }

        int maximumNumber = matrix[0, 0];

        for (int i = 0; i < matrixHeight; i++)
        {
            for (int j = 0; j < matrixWidth; j++)
            {
                if (matrix[i, j] > maximumNumber)
                {
                    maximumNumber = matrix[i, j];
                }
            }
        }

        Console.WriteLine($"\nНаибольший элемент матрицы: {maximumNumber}");

        Console.WriteLine("\nПолученная матрица (с замененными максимальными элементами):");

        for (int i = 0; i < matrixHeight; i++)
        {
            for (int j = 0; j < matrixWidth; j++)
            {
                if (matrix[i, j] == maximumNumber)
                {
                    matrix[i, j] = 0;
                }
                Console.Write(string.Format("{0," + numberFieldWidth + "}", matrix[i, j]));
            }
            Console.WriteLine();
        }
    }
}
