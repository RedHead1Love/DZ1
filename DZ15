using System;

class Program
{
    static void Main()
    {
        const string ConvertUsdToEur = "1";
        const string ConvertUsdToRub = "2";
        const string ConvertEurToUsd = "3";
        const string ConvertEurToRub = "4";
        const string ConvertRubToUsd = "5";
        const string ConvertRubToEur = "6";
        const string ExitProgram = "0";

        double usdToEurRate = 0.85;
        double usdToRubRate = 75.0;
        double eurToUsdRate = 1.18;
        double eurToRubRate = 88.0;
        double rubToUsdRate = 0.013;
        double rubToEurRate = 0.011;

        double usdBalance = 100.0;
        double eurBalance = 100.0;
        double rubBalance = 10000.0;

        bool isRunning = true;

        while (isRunning)
        {
            Console.WriteLine($"Ваш баланс: USD: {usdBalance:F2}, EUR: {eurBalance:F2}, RUB: {rubBalance:F2}");
            Console.WriteLine("Выберите операцию:");
            Console.WriteLine($"{ConvertUsdToEur} Конвертировать USD в EUR");
            Console.WriteLine($"{ConvertUsdToRub} Конвертировать USD в RUB");
            Console.WriteLine($"{ConvertEurToUsd} Конвертировать EUR в USD");
            Console.WriteLine($"{ConvertEurToRub} Конвертировать EUR в RUB");
            Console.WriteLine($"{ConvertRubToUsd} Конвертировать RUB в USD");
            Console.WriteLine($"{ConvertRubToEur} Конвертировать RUB в EUR");
            Console.WriteLine($"{ExitProgram} Выход");

            string input = Console.ReadLine();

            double amount = 0;

            bool validInput = false;

            if (input == ConvertUsdToEur || input == ConvertUsdToRub || input == ConvertEurToUsd ||
                input == ConvertEurToRub || input == ConvertRubToUsd || input == ConvertRubToEur)
            {
                Console.Write("Введите сумму: ");
                validInput = double.TryParse(Console.ReadLine(), out amount) && amount > 0;
            }

            switch (input)
            {
                case ConvertUsdToEur when validInput && amount <= usdBalance:
                    usdBalance -= amount; eurBalance += amount * usdToEurRate; 
                    break;

                case ConvertUsdToRub when validInput && amount <= usdBalance:
                    usdBalance -= amount; rubBalance += amount * usdToRubRate;
                    break;

                case ConvertEurToUsd when validInput && amount <= eurBalance:
                    eurBalance -= amount; usdBalance += amount * eurToUsdRate; 
                    break;

                case ConvertEurToRub when validInput && amount <= eurBalance:
                    eurBalance -= amount; rubBalance += amount * eurToRubRate; 
                    break;

                case ConvertRubToUsd when validInput && amount <= rubBalance:
                    rubBalance -= amount; usdBalance += amount * rubToUsdRate; 
                    break;

                case ConvertRubToEur when validInput && amount <= rubBalance:
                    rubBalance -= amount; eurBalance += amount * rubToEurRate; 
                    break;

                case ExitProgram:
                    isRunning = false; 
                    break;

                default:
                    Console.WriteLine("Неверный ввод или недостаточно средств"); break;
            }
        }
    }
}
