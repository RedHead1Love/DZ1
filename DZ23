using System;

public class Program
{
    public static void Main()
    {
        Console.WriteLine("Введите координаты игрока (X и Y):");

        Console.Write("X: ");
        int finallyPositionx = GetValidInput();

        Console.Write("Y: ");
        int finallyPositionY = GetValidInput();

        Player player = new Player(finallyPositionx, finallyPositionY, '@');
        Renderer renderer = new Renderer();

        Console.Clear();
        renderer.DrawPlayer(player);

        Console.WriteLine("\nИгрок отрисован. Нажмите любую клавишу для выхода");
        Console.ReadKey();
    }

    private static int GetValidInput()
    {
        while (true)
        {
            string input = Console.ReadLine();

            if (int.TryParse(input, out int result))
            {
                return result;
            }
            Console.Write("Ошибка ввода. Введите целое число: ");
        }
    }
}

public class Player
{
    private int _positionX;
    private int _positionY;
    private char _symbol;

    public Player(int xPosition, int yPosition, char symbol)
    {
        _positionX = xPosition;
        _positionY = yPosition;
        _symbol = symbol;
    }

    public int PositionX
    {
        get { return _positionX; }
        set { _positionX = value; }
    }

    public int PositionY
    {
        get { return _positionY; }
        set { _positionY = value; }
    }

    public char Symbol
    {
        get { return _symbol; }
        set { _symbol = value; }
    }
}

public class Renderer
{
    public void DrawPlayer(Player player)
    {
        if (player.PositionX >= 0 && player.PositionY >= 0)
        {
            Console.SetCursorPosition(player.PositionX, player.PositionY);
            Console.Write(player.Symbol);
        }
    }
}
