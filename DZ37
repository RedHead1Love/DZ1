using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Введите элементы массива через пробел:");
        int[] digit = Array.ConvertAll(Console.ReadLine().Split(' '), int.Parse);

        Console.WriteLine("Введите количество позиций для сдвига влево:");
        int shift = int.Parse(Console.ReadLine());

        Console.WriteLine("Исходный массив:");
        Console.WriteLine(string.Join(", ", digit));

        if (digit.Length > 0)
        {
            shift = shift % digit.Length;

            if (shift < 0)
                shift += digit.Length;

            for (int i = 0; i < shift; i++)
            {
                int temp = digit[0];

                for (int number = 0; number < digit.Length - 1; number++)
                {
                    digit[number] = digit[number + 1];
                }

                digit[digit.Length - 1] = temp;
            }
        }

        Console.WriteLine("Массив после сдвига:");
        Console.WriteLine(string.Join(", ", digit));
    }
}
