using System;

class Program
{
    static void Main()
    {
        string[] fullNames = Array.Empty<string>();
        string[] positions = Array.Empty<string>();

        int count = 0;

        const string CommandAddDossier = "1";
        const string CommandPrintAllDossiers = "2";
        const string CommandRemoveDossier = "3";
        const string CommandSearchByLastName = "4";
        const string CommandExit = "5";

        bool isRunning = true;

        while (isRunning)
        {
            Console.WriteLine("\nМеню:");
            Console.WriteLine($"{CommandAddDossier}. Добавить досье");
            Console.WriteLine($"{CommandPrintAllDossiers}. Вывести все досье");
            Console.WriteLine($"{CommandRemoveDossier}. Удалить досье");
            Console.WriteLine($"{CommandSearchByLastName}. Поиск по фамилии");
            Console.WriteLine($"{CommandExit}. Выход");
            Console.Write("Выберите действие: ");

            string choice = Console.ReadLine();

            switch (choice)
            {
                case CommandAddDossier:
                    AddDossier(ref fullNames, ref positions, ref count);
                    break;

                case CommandPrintAllDossiers:
                    PrintAllDossiers(fullNames, positions, count);
                    break;

                case CommandRemoveDossier:
                    RemoveDossier(ref fullNames, ref positions, ref count);
                    break;

                case CommandSearchByLastName:
                    SearchByLastName(fullNames, positions, count);
                    break;

                case CommandExit:
                    isRunning = false;
                    break;

                default:
                    Console.WriteLine("Неверный ввод. Попробуйте снова.");
                    break;
            }
        }
    }

    static void AddDossier(ref string[] fullNames, ref string[] positions, ref int count)
    {
        int initialArraySize = 4;
        int arrayExpansionFactor = 2; 

        Console.Write("Введите ФИО сотрудника: ");
        string name = Console.ReadLine();

        Console.Write("Введите должность: ");
        string position = Console.ReadLine();

        if (count == fullNames.Length)
        {
            ResizeArray(ref fullNames, count == 0 ? initialArraySize : fullNames.Length * arrayExpansionFactor);
            ResizeArray(ref positions, count == 0 ? initialArraySize : positions.Length * arrayExpansionFactor);
        }

        fullNames[count] = name;
        positions[count] = position;
        count++;

        Console.WriteLine("Досье добавлено.");
    }

    static void ResizeArray(ref string[] array, int newSize)
    {
        string[] newArray = new string[newSize];
        Array.Copy(array, newArray, array.Length);
        array = newArray;
    }

    static void PrintAllDossiers(string[] fullNames, string[] positions, int count)
    {
        if (count == 0)
        {
            Console.WriteLine("Нет досье для отображения.");

            return;
        }

        for (int i = 0; i < count; i++)
        {
            Console.WriteLine($"{i + 1}) {fullNames[i]} — {positions[i]}");
        }
    }

    static void RemoveDossier(ref string[] fullNames, ref string[] positions, ref int count)
    {
        int arrayReductionFactor = 2;

        if (count == 0)
        {
            Console.WriteLine("Нет досье для удаления.");

            return;
        }

        Console.Write("Введите номер досье для удаления: ");

        if (int.TryParse(Console.ReadLine(), out int index) == false || index < 1 || index > count)
        {
            Console.WriteLine("Неверный номер досье.");

            return;
        }

        index--;

        for (int i = index; i < count - 1; i++)
        {
            fullNames[i] = fullNames[i + 1];
            positions[i] = positions[i + 1];
        }

        count--;

        if (count > 0 && count == fullNames.Length / arrayReductionFactor)
        {
            ResizeArray(ref fullNames, fullNames.Length / arrayReductionFactor);
            ResizeArray(ref positions, positions.Length / arrayReductionFactor);
        }
        else if (count == 0)
        {
            fullNames = Array.Empty<string>();
            positions = Array.Empty<string>();
        }

        Console.WriteLine("Досье удалено.");
    }

    static void SearchByLastName(string[] fullNames, string[] positions, int count)
    {
        if (count == 0)
        {
            Console.WriteLine("Нет досье для поиска.");

            return;
        }

        Console.Write("Введите фамилию для поиска: ");
        string lastName = Console.ReadLine();

        bool found = false;

        for (int i = 0; i < count; i++)
        {
            string[] nameParts = fullNames[i].Split(' ');

            if (nameParts.Length > 0 && nameParts[0].Equals(lastName, StringComparison.OrdinalIgnoreCase))
            {
                Console.WriteLine($"{i + 1}) {fullNames[i]} - {positions[i]}");
                found = true;
            }
        }

        if (found == false)
        {
            Console.WriteLine("Досье с такой фамилией не найдены.");
        }
    }
}
